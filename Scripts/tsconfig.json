{
  "compilerOptions": {
    "preserveConstEnums": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "outDir": ".build",
    "module": "es2022",
    "noEmitOnError": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "types": ["node"]
  }
}
